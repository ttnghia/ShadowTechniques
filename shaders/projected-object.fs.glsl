#version 410 core
//------------------------------------------------------------------------------------------
// fragment shader, projected object shading
//------------------------------------------------------------------------------------------

//------------------------------------------------------------------------------------------
// uniforms
uniform float shadowIntensity;

//----------------------------------------------------------`--------------------------------
// in variables
in float f_keepFragment;
//----------------------------------------------------------`--------------------------------
// out variables
out vec4 fragColor;

//------------------------------------------------------------------------------------------
void main()
{
    if(f_keepFragment < 0.5)
       discard;

    fragColor = vec4(0, 0, 0, shadowIntensity);
}
